.button-container {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: flex-start; /* 垂直居上 */
  height: 100rpx; /* 按钮容器的高度 */
}


.button {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
}

.button-text {
  font-size: 30rpx;
}

.page-scroll,.page-scroll2 {
  flex: 1;
}
.active {
  font-size: 38rpx; /* 点击时文字放大 */
}












.container {
  display: flex;
  flex-direction: column;
}

.post-container {
  width: 97%; /* 让框更大一些 */
  max-height: 600rpx; /* 让框更大一些 */
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.info {
  margin-left: 10rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-left: 8rpx;
}

.time {
  font-size: 18rpx;
  color: rgb(179, 178, 178);
  margin-left: 10rpx;
  
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-bottom: 30rpx;
  /* background-image: url('../../image/delete-icon.png'); */
}

.post-content {
  padding: 0rpx 10rpx 0rpx;
}

.image-container {
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.content-image {
  height: 175rpx;
  width: 230rpx; /* 设置图片高度为框上下间距的一半 */
  border-radius: 20rpx;
}

.title2 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx; /* 增加标题和内容的间距 */
}

.content {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  margin-top: 8rpx;
  line-height: 1.3;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 10rpx 10rpx;
}

.footer-top {
  display: flex;
}

.tag {
  font-size: 20rpx;
  color: rgb(128, 126, 126);
  margin-right: 10rpx;
  background-color: rgb(189, 185, 185);
  border-radius: 10rpx;
  padding: 6rpx;
}

.viewers {
  font-size: 22rpx;
  color: #999;
  margin-left: 6rpx;
  margin-top: 4rpx;
}

.footer-bottom {
  display: flex;
  align-items: center;
}

.actions {
  display: flex;
  align-items: center;
}

.like-icon,
.comment-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.like-count,
.comment-count {
  font-size: 20rpx;
  color: #999;
  margin-right: 10rpx;
}
