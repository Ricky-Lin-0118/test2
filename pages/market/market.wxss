/* 总按钮 */
.container {
  display: flex;
  flex-direction: column;
}

.button-container {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 20rpx 0;
  background-color: #ffffff;
  z-index: 999; /* 使按钮置顶 */
}

.button {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
}

.button-text {
  font-size: 30rpx;
}

.page-scroll,.page-scroll2 {
  flex: 1;
}
.active {
  font-size: 38rpx; /* 点击时文字放大 */
}

/* 主题选择 */

.topic-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 10rpx;
  padding: 120rpx 8rpx 10rpx 8rpx;
  margin-top: 0rpx; /* 向上移动 20rpx */
}

.block {
  background-color: #f0f0f0;
  border-radius: 20rpx;
  padding: 20rpx;
  text-align: center;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap; /* 禁止标题换行 */
}

.subtitle {
  font-size: 21rpx;
  color: #666;
  white-space: nowrap; /* 禁止副标题换行 */
}

/* 局部按钮 */
.button-container2 {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
  padding: 30rpx 20rpx 10rpx;
  background-color: #ffffff;
  z-index: 999; /* 使按钮置顶 */

}
.container2 {
  position: relative;
  /* 其他样式属性 */
}
.active2 {
  font-size: 38rpx; /* 点击时文字放大 */
}

